include mixins/_form
doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    title Code Buddy - Sign In
    style(type='text/css').
      body {
        background: #1B1C1D;
        background-image: url("../images/desk-office-hero-workspace.jpg") !important;
        color: rgba(255, 255, 255, 0.9);
      }
      body > .grid {
        height: 100%;
      }
      .logo {
        text-align: center;
        overflow: hidden;
      }
    style#extension_grayscale(type='text/css').
      html *, * { filter: initial !important; }
      
    link(rel='stylesheet', type='text/css', href='/semantic/dist/semantic.min.css')
    script(src='/js/static/jquery.min.js')
    script(src='/semantic/dist/components/form.js')
    script(src='/semantic/dist/components/transition.js')
    script(type='text/javascript').
      $(document).ready(function () {
        $('.ui.form.signInForm').form({
          fields: {
            email: {
              identifier: 'email',
              rules: [{
                  type: 'empty',
                  prompt: 'Please enter your username or e-mail'
                }
              ]
            },
            password: {
              identifier: 'password',
              rules: [{
                  type: 'empty',
                  prompt: 'Please enter your password'
                },
                {
                  type: 'length[8]',
                  prompt: 'Your password must be at least 8 characters'
                }
              ]
            }
          }
        });
      });
          
  body
    .ui.one.column.stackable.center.aligned.middle.aligned.page.grid
      .column.seven.wide
        .logo
          img(src='/images/logo-white-s.png')
        .ui.stacked.segment 
          h2.ui.yellow.image.header
            .content Sign In Account
          +signinForm()
          .ui.message
            | New to us? 
            a(href='/register') Register
